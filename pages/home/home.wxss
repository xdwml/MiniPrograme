/* pages/home/home.wxss */
/*class选择器*/
/*总标题样式*/
.total-title{
  font-size: 30px; 
  font-weight: 600;
  text-align: center;
  }

  /*子标题样式*/
  .sub-title{
  font-size: 20px; 
  font-weight: 500;
  text-align: left;
  }
  /*项目标题样式*/
  .item-title{
  font-size:18px;
  font-weight:500;
  color: #c60;
  border-left: 3px solid #c60;
  padding-left: 15px;
  }
  /*描述样式*/
  .desc,.item-desc{
  color: black;                                                                                                       
  }
  /*id选择器*/
  /*wxmlinfo studyweapp样式*/
  #wxmlinfo,#studyweapp{
  font-size:16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  line-height: 1.6;
  padding-top:20px;
  padding-right:15px;
  padding-bottom:20px;
  padding-left:15px;
}
/*标题样式*/
.totle-title,.sub-title.item-title{
  margin-bottom:0.9em;
  }
  /*连接样式*/
.item-link{
  margin: 20px;
  text-align: center;
  padding:10px 15px;
  background-color: #4ea6ec;
  color: #fff;
  border-radius: 4px;
}
/*背景颜色*/
#wxmlinfo{
  background-color: #dae7d9;
}
/*背景图片：只能来自服务器或图床*/
#studyweapp{
  background-image: url(https://hackwork.oss-cn-shanghai.aliyuncs.com/lesson/weapp/4/bg.png);
  background-size: cover;
  background-repeat: no-repeat;
}
.event-list{
  background-color: #fafbfc;
  padding: 20px 0;
  }
.event-link{
  margin: 10px;
  border-radius: 5px;
  background-color: #fff;
  box-shadow:5rpx 8rpx 10rpx rgba(53,178,225,0.26);
  overflow: hidden;
}
/*落款图片样式*/
.event-img image{
  width: 100%;
  }
.event-content{
  padding: 25rpx;
  }
.event-title{
  line-height: 1.7em;
  }
.event-desc{
  font-size: 16px;
  color: #666;
  line-height: 1.5em;
  font-weight: 200;
  }
.event-box{
  margin-top: 15px;
  overflow: hidden;
  }
  /*落款样式*/
.event-address,.event-time{
  float: left;
  color: #810505;
  font-size: 12px;
  padding-right: 15px;
  }
