/* pages/filter.wxss */
/*图片样式*/
.filter-display img{
    width: 150px;height: auto;
}
/*blur高斯模糊*/
.blur{
    filter: blur(8px);
}
/*grayscale图片变灰*/
.grayscale{
    filter: grayscale(90%);
}
/*opacity图片透明*/
.opacity{
    filter: opacity(25%);
}
/*多个滤镜叠加，注意css的写法即可*/
.multiple{
    filter: blur(8px) grayscale(90%) opacity(25%);
}
/*将鼠标悬停（模拟器）或手指（手机微信）按住或放开图片查看效果*/
.grayscale-hover{
  filter:grayscale(0);
}
.blur-bg {
    width: 750rpx;height: 300rpx;overflow: hidden;
    background: url(https://hackwork-1251009918.cos.ap-shanghai.myqcloud.com/handbook/html5/blurimg.jpg);
    background-size: cover;
    position: fixed;
    filter: blur(15px);
    z-index: -1;   
}
